<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1B732"
    android:backgroundTint="#D1C23D"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="1965dp"
                android:layout_height="75dp"
                android:layout_marginTop="48dp"
                android:drawableLeft="@android:drawable/ic_lock_lock"
                android:drawablePadding="8dp"
                android:ems="10"
                android:inputType="text"
                android:singleLine="true"
                android:text="Password"
                app:layout_constraintTop_toBottomOf="@+id/editTextText"
                tools:layout_editor_absoluteX="2dp" />

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="1848dp"
                android:layout_height="78dp"
                android:drawableLeft="@android:drawable/sym_action_email"
                android:ems="10"
                android:inputType="text"
                android:singleLine="true"
                android:text="Email Or Username"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="102dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="FORGOT PASSWORD"
                android:textColor="#C5B731"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextText2" />

            <Button
                android:id="@+id/button"
                android:layout_width="1916dp"
                android:layout_height="102dp"
                android:layout_marginTop="44dp"
                android:backgroundTint="#D0C145"
                android:ellipsize="marquee"
                android:scrollbarSize="20dp"
                android:text="SIGN IN"
                app:cornerRadius="16dp"
                app:iconSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextText2"
                tools:layout_editor_absoluteX="2dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="0"
                android:text="Don't have an account ?"
                android:textColor="#DBCC4F"
                app:layout_constraintTop_toBottomOf="@+id/button"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="155dp"
                android:layout_height="17dp"
                android:text="Sign up"
                android:textColor="#090909"
                tools:layout_editor_absoluteX="170dp"
                tools:layout_editor_absoluteY="537dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        app:backgroundTint="#EBE9E0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#2196F3"
        app:srcCompat="@android:drawable/arrow_down_float"
        app:tint="#BAA81A" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="293dp"
        android:layout_height="69dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="116dp"
        android:fontFamily="sans-serif-medium"
        android:text="WELCOME"
        android:textColor="#F8F4F4"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/floatingActionButton"
        app:layout_constraintVertical_bias="0.582"
        tools:layout_editor_absoluteX="59dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="294dp"
        android:layout_height="68dp"
        android:text="SHSCHAT"
        android:textColor="#F0EAEA"
        android:textSize="36dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="148dp" />

</androidx.constraintlayout.widget.ConstraintLayout>